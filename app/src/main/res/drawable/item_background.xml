<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Color de la sombra -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Fondo del Item con bordes redondeados -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco del item -->
            <corners android:radius="12dp" />  <!-- Borde redondeado -->
            <stroke
                android:width="2dp"
                android:color="#E0E0E0" /> <!-- Color del borde del recuadro -->
        </shape>
    </item>
</layer-list>
